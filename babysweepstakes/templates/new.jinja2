{% extends "templates/Layout.jinja2" %}
{% block content %}
  <form method="POST" action="new_guess" class="guess">
    <div>
      <input type="text" name="your_name"/>
    </div>
    <div>
        <input type="radio" name="baby_sex" value="Boy">Boy
        <input type="radio" name="baby_sex" value="Girl">Girl
    <div>
      <input type="number" name="days_late" class="early_late" value="0">
      <span class="due_date"></span>
    </div>
    <div>
      <input type="number" name="pounds" class="pounds" value="7" min="0">lb
      <input type="number" name="ounces" class="ounces" value="6">oz
      <span class="kilos_and_grams"></span>
    </div>
    <input type="submit" value="Submit"/>
  </form>
{% endblock %}
